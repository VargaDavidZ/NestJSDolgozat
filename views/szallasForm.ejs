            <div class="row" >
                <div class="col-sm-6">
                    <label for="">Nev:</label>
                </div>
                <div class="col-sm-6"> <input type="text" name="Nev" id="Nev" value="<%=nameData%>" required><br></div>
            </div>
          
    
