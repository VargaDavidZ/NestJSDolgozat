                <div class="col-sm-6"><label for="">Email:</label></div>
                <div class="col-sm-6"> <input type="string" name="Email" id="Email" value="<%=emailData%>" required><br></div>
            </div>

            <div class="row">
                <div class="col-sm-6"><label for="">Dátum és időpont:</label></div>
                <div class="col-sm-6"><input type="datetime-local"  min="2024-10-01" name="Datum" id="Date" value="<%=dateData%>" required><br></div>
            </div>
           
            
           
            <div class="row">
                <div class="col-sm-6"> <label for="">Vendégek száma:</label></div>
                <div class="col-sm-6">  <input type="number"  name="Vendekeg" id="Vendegek" required></div>
            </div>
            
            <input type="submit">
        </form>


    </div>


  
        
